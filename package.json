{
  "name": "tree-sitter-mermaid",
  "version": "0.9.1",
  "description": "ðŸš€ Singularity tree-sitter-mermaid - A complete Mermaid.js grammar with 100% test coverage (23/23 types)",
  "main": "bindings/node",
  "types": "bindings/node",
  "scripts": {
    "build": "tree-sitter build --output ./build/mermaid.so",
    "test": "tree-sitter test",
    "generate": "tree-sitter generate",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "keywords": [
    "tree-sitter"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "author": "Singularity",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^8.5.0",
    "node-gyp-build": "^4.8.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.26.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.26.0",
    "prebuildify": "^6.0.1"
  },
  "tree-sitter": [
    {
      "scope": "source.mermaid",
      "file-types": [
        "mmd"
      ],
      "injection-regex": "mermaid|mmd"
    }
  ]
}
